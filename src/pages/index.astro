<script>
  // for tabs
  const buttons = document.querySelectorAll(".tab-btn");
  const contents = document.querySelectorAll(".tab-content");

  // ✅ Reusable function to activate a tab
  function activateTab(tab: any) {
    (buttons as NodeListOf<HTMLElement>).forEach((b) => {
      const text = b.querySelector(".text") as HTMLElement;

      if (b.getAttribute("data-tab") === tab) {
        // Mobile: wider + show text
        if (window.innerWidth < 768) {
          b.style.width = "55%";
          text.classList.remove("hidden");
        }
        b.classList.add("bg-[#D7DCE3]", "font-medium");
        b.classList.remove("bg-[var(--verLightGrayishBlue)]", "font-normal");
      } else {
        if (window.innerWidth < 768) {
          b.style.width = "15%";
          text.classList.add("hidden");
        }
        b.classList.remove("bg-[#D7DCE3]", "font-medium");
        b.classList.add("bg-[var(--verLightGrayishBlue)]", "font-normal");
      }
    });

    // Animate content
    (contents as NodeListOf<HTMLElement>).forEach((c) => {
      if (c.getAttribute("data-tab") === tab) {
        c.style.maxHeight = c.scrollHeight + "px";
        c.style.maxHeight = "526px";
        c.style.opacity = "1";
      } else {
        c.style.maxHeight = "0px";
        c.style.opacity = "0";
      }
    });
  }

  // ✅ Click events
  (buttons as NodeListOf<HTMLElement>).forEach((btn) => {
    btn.addEventListener("click", () => {
      const tab = btn.getAttribute("data-tab");
      activateTab(tab!);
    });
  });

  // ✅ Activate tab #1 by default on page load
  document.addEventListener("DOMContentLoaded", () => {
    activateTab("1");
  });

  // ✅ Handle resize
  window.addEventListener("resize", () => {
    if (window.innerWidth >= 768) {
      (buttons as NodeListOf<HTMLElement>).forEach((b) => {
        b.style.width = "25%";
        const text = b.querySelector(".text") as HTMLElement;
        text.classList.remove("hidden");
      });
    } else {
      // Re-apply mobile widths correctly
      const activeBtn = document.querySelector(
        ".tab-btn.bg-[#D7DCE3]"
      ) as HTMLElement;
      if (activeBtn) {
        (buttons as NodeListOf<HTMLElement>).forEach((b) => {
          const text = b.querySelector(".text") as HTMLElement;
          if (b === activeBtn) {
            b.style.width = "55%";
            text.classList.remove("hidden");
          } else {
            b.style.width = "15%";
            text.classList.add("hidden");
          }
        });
      }
    }
  });

  // Progress
  // Get elements with null checks
  const progressBar = document.getElementById(
    "progress-bar"
  ) as HTMLDivElement | null;
  const fadeImage = document.getElementById(
    "fade-image"
  ) as HTMLImageElement | null;
  const pcontents: (HTMLDivElement | null)[] = [
    document.getElementById("content1") as HTMLDivElement | null,
    document.getElementById("content2") as HTMLDivElement | null,
    document.getElementById("content3") as HTMLDivElement | null,
  ];

  if (!progressBar || !fadeImage || pcontents.some((c) => c === null)) {
    throw new Error("Required elements not found in the DOM.");
  }

  let progress = 0;
  let started = false; // ensure animation runs only once

  // Function to run progress animation
  function runProgress(): void {
    if (started) return;
    started = true;

    const interval = setInterval(() => {
      progress += 1;

      // Fill progress bar
      progressBar!.style.width = progress + "%";

      // Fade image
      fadeImage!.style.opacity = (progress / 100).toString();

      // Show content progressively
      if (progress >= 0 && progress <= 33)
        pcontents[0]!.classList.add("active");
      else if (progress > 33 && progress <= 66)
        pcontents[1]!.classList.add("active");
      else if (progress > 66) pcontents[2]!.classList.add("active");

      if (progress >= 100) clearInterval(interval);
    }, 30);
  }

  // Use Intersection Observer to trigger animation
  const section = document.querySelector(
    ".progress-container"
  ) as HTMLElement | null;
  if (!section) throw new Error("Section not found");

  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          runProgress();
        }
      });
    },
    { threshold: 0.5 } // trigger when 50% of section is visible
  );

  observer.observe(section);
</script>
